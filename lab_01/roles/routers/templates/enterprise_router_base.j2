hostname {{ item.hostname }}
!
interface loopback0
  ip address {{ item.loopback0_ip }}
  ip ospf 1 area 0
!
ip domain-name lab.local
!
username ansible secret ansible
!
router ospf 1
!
!
interface eth0/0
  description UPLINK TO ISP
  ip address {{ item.uplink_ip }}
  ip nat outside
!
interface eth0/1
  description DOWNLINK TO FW
  ip address {{ item.fw_downlink_ip}}
  ip ospf 1 area 0
  ip nat inside
!
access-list 1 permit any
ip nat inside source list 1 interface {{ item.nat_outside_interface }} overload
